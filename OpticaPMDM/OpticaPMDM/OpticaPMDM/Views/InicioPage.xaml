<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:OpticaPMDM.Controls"
             mc:Ignorable="d"
             x:Class="OpticaPMDM.Views.InicioPage">
    <ContentPage.Content>
        <local:GradientColorStack StartColor="#CBF4FF" EndColor="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <Label Text="Optica PMDM" TextColor="LightSkyBlue" FontSize="Large" FontAttributes="Bold" 
                       VerticalOptions="Center" HorizontalOptions="Center"/>

                <Frame Grid.Row="1" CornerRadius="200" HeightRequest="200"
                    BorderColor="Transparent" BackgroundColor="Gray"
                       Padding="0" WidthRequest="200" VerticalOptions="Center"
                       HorizontalOptions="Center">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding EstrenarCommand}"/>
                    </Frame.GestureRecognizers>
                    <Frame BorderColor="Transparent" BackgroundColor="LightSkyBlue"
                           Padding="0" CornerRadius="200" WidthRequest="185" HeightRequest="185"
                           VerticalOptions="Center" HorizontalOptions="Center">
                        <Label Text="Estrenar" TextColor="Gray" VerticalOptions="Center" HorizontalOptions="Center"
                               FontSize="Medium" FontAttributes="Bold"/>
                    </Frame>
                </Frame>

                <Button Text="Cargar stock" Command="{Binding CargarStockCommand}" 
                                Grid.Row="2" 
                                FontSize="Medium" FontAttributes="Bold"
                            CornerRadius="50" BackgroundColor="LightSkyBlue"
                        TextColor="Gray"
                                MinimumHeightRequest="100"
                            Margin="10, 10, 10, 10"/>

                <Button Text="Reiniciar" Command="{Binding FinalizarParCommand}" 
                                Grid.Row="3" 
                                FontSize="Medium" FontAttributes="Bold"
                            CornerRadius="50" BackgroundColor="LightSkyBlue"
                        TextColor="Gray"
                                MinimumHeightRequest="100"
                            Margin="10, 10, 10, 10"/>

            </Grid>
        </local:GradientColorStack>
    </ContentPage.Content>
</ContentPage>